<% include ../partials/header %>

<h1>Buat Pesanan Baru</h1>

<form action="/admin/order" method="POST">
    RASA
    <ul>
    <% menus.forEach(function(menu){%>
        <li>
            <label for="<%=menu.name%>"><%= menu.emoji%> - <%= menu.name%></label>
            <input type="number" name="orderDetail[<%=menu.name%>]" id="<%=menu.name%>">
        </li>
    <%})%>
    </ul>

    Info pemesan : 
    <input type="text" name="order[custName]" placeholder="Nama Pemesan/Supplier" required>
    <input type="text" name="order[orderType]" placeholder="skema penjualan" required>
    <input type="tel" name="order[phoneNum]" placeholder="No telp" required>
    <input type="checkbox" name="order[isBuying]" placeholder="No telp" id="isBuying">
    <input type="date" name="order[orderDate]" placeholder="Untuk Hari" required>

    <!--
    custName: String,
    orderType: String,
    phoneNum: Number,
    isBuying: Boolean,
    orderDate: Date,
    orderCode: String,
    orderStatus: String,
    orderDetail: Array -->

    <button class="btn btn-primary">Order!</button>
</form>