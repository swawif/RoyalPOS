<% include ../partials/header %>
<% include ../helper %>
<% var month = ["Januari","Februari","Maret","April","Mei","Juni","Juli","Agustus","September","Oktober","November","Desember"];%>

<div class="container">
    <h1>Order Index Page</h1>

    <% orders.forEach(function(order){%>
        <div class="thumbnail">
            <h2><%=order.custName%></h2>
            <h4><%=order.phoneNum%></h4>
            <%var mm = order.orderDate.getMonth()%>
            <p><%=order.orderDate.getDate() + " " + month[mm] + " " + order.orderDate.getFullYear()%></p>
            <p><%=order.orderType%></p>

            <table class="table">
                <tr>
                    <% menus.forEach(function(menu){%>
                    <th style="background-color: <%=menu.color%>;"><%=menu.name.substring(0,3).toUpperCase()%></th>
                    <%});%>
                </tr>
                <tr>
                    <% menus.forEach(function(menu){%>
                        <td><%=menu.emoji%></td>
                    <%});%>
                </tr>
                <tr>
                    <% menus.forEach(function(menu){%>
                        <td><%=order.orderDetail[menu.name]%></td>
                    <%});%>
                </tr>
            </table>
            <p>Status :</p>
            <%switch (order.orderStatus) {
                case 0 :%>
                    <p>Menunggu Konfirmasi</p>
                    <%break;%>
                <%case 1 :%>
                    <p>Pesanan sedang diproses</p>
                    <%break;%>
                <%case 2 :%>
                    <p>Pesanan terkirim</p>
                    <%break;%>
                <%case 3 :%>
                    <p>Selesai</p>
                    <%break;%>
            
                <%default:%>
                    <p>Err: No Status</p>
                    <%break;%>
            <%}%>
            <a class="btn btn-primary" href="/admin/order/<%=order._id%>">Detail</a>
        </div>
    <%})%>
    
</div>

<% include ../partials/footer %>